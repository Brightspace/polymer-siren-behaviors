{
  "name": "d2l-polymer-siren-behaviors",
  "private": true,
  "description": "Shared Polymer behaviors for use in web components",
  "scripts": {
    "postinstall": "polymer install --variants",
    "test": "npm run test:lint && npm run test:polymer:local",
    "test:lint": "npm run test:lint:js && npm run test:lint:wc",
    "test:lint:js": "eslint *.html",
    "test:lint:wc": "polymer lint --input *.html",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/polymer-siren-behaviors.git"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.1",
    "polymer-cli": "^1.7.7"
  }
}
